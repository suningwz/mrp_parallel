<odoo>
  <data>
    
    <record id="mrp_workcenter_form" model="ir.ui.view">
      <field name="name">mrp.workcenter.form</field>
      <field name="model">mrp.workcenter</field>
      <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
      <field name="arch" type="xml">
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="after">
          <page name="cg" string="Parallel Production">
            <group name="grp-general" string="Parallel Work Center - Properties">
              <field name="fold" />
              <field name="workcentertbc"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>